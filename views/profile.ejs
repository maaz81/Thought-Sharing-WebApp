<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <title>Profile Page</title>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>

<body class="bg-gradient-to-br from-indigo-50 to-purple-50 min-h-screen">
    <div class="container mx-auto px-4 py-8 max-w-4xl">
        <!-- Header Section with Gradient -->
        <header class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-xl shadow-lg p-6 mb-8">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold text-white">Social App</h1>
                    <p class="text-indigo-100">Connect with your friends</p>
                </div>
                <a href="/Logout" class="bg-white hover:bg-gray-100 text-indigo-600 px-4 py-2 rounded-lg font-medium transition duration-200">
                    Logout
                </a>
            </div>
        </header>

        <!-- User Greeting Card -->
        <div class="bg-white rounded-xl shadow-md p-6 mb-6 border-l-4 border-indigo-500">
            <h1 class="flex item-center text-2xl font-semibold text-gray-800">Welcome back, <div class="w-10 h-10 mx-3 rounded-full"><a href="/profile/upload"><img class="rounded-full w-full h-full object-cover" src="/user/<%= user.profilepic %>"></a></div> <span class="text-indigo-600"><%= user.name %></span></h1>
            <p class="text-gray-600 mt-1">Share what's new with your community</p>
        </div>

        <!-- Post Creation Form -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden mb-6">
            <div class="bg-gradient-to-r from-indigo-500 to-purple-500 p-4">
                <h2 class="text-xl font-semibold text-white">Create a new post</h2>
            </div>
            <form action="/create/post" method="post" class="p-6">
                <textarea name="post" id="post" cols="30" rows="4" 
                    class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200"
                    placeholder="What's on your mind?"></textarea>
                <div class="flex justify-end mt-4">
                    <button type="submit" 
                        class="bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white px-6 py-2 rounded-lg font-medium shadow-md hover:shadow-lg transition duration-200">
                        Post
                    </button>
                </div>
            </form>
        </div>

        <!-- Posts Section -->
        <div class="mb-8">
            <div class="bg-gradient-to-r from-indigo-500 to-purple-500 p-4 rounded-t-xl">
                <h3 class="text-xl font-semibold text-white">Your Posts</h3>
            </div>
            
            <% if (user.post.length === 0) { %>
                <div class="bg-white rounded-b-xl shadow-md p-8 text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <p class="text-gray-500 mt-4">You haven't posted anything yet.</p>
                    <p class="text-gray-400 text-sm mt-1">Share your first post above!</p>
                </div>
            <% } else { %>
                <div class="space-y-4">
                    <% user.post.forEach(post=> { %>
                        <div class="post bg-white rounded-lg shadow-md overflow-hidden">
                            <div class="p-6">
                                <div class="flex items-center mb-4">
                                    <div class="w-10 h-10 bg-gradient-to-r from-indigo-100 to-purple-100 rounded-full flex items-center justify-center mr-3">
                                        <span class="text-indigo-600 font-semibold"><%= user.username.charAt(0).toUpperCase() %></span>
                                    </div>
                                    <div>
                                        <h4 class="font-medium text-gray-800">@<%= user.username %></h4>
                                        <p class="text-xs text-gray-500"><%= new Date(post.createdAt).toLocaleString() %></p>
                                    </div>
                                </div>
                                <p class="text-gray-700 mb-4 whitespace-pre-line"><%= post.content %></p>
                                <div class="flex items-center text-sm text-gray-500 border-t pt-3">
                                    <div class="flex items-center mr-4">
                                        <a href="/like/<%= post._id %>" class="flex items-center group">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1 group-hover:text-red-500 transition duration-200 <%= post.likes.indexOf(user._id) !== -1 ? 'text-red-500 fill-current' : 'text-gray-400' %>" viewBox="0 0 20 20" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                            </svg>
                                            <span class="group-hover:text-red-500 transition duration-200 <%= post.likes.indexOf(user._id) !== -1 ? 'text-red-500' : '' %>">
                                                <%= post.likes.length %> <%= post.likes.length === 1 ? 'Like' : 'Likes' %>
                                            </span>
                                        </a>
                                    </div>
                                    <a href="/edit/<%= post._id %>" class="flex items-center mr-4 hover:text-indigo-600 transition duration-200">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                        Edit
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>